  <div class="row">
    <div class="col-xs-12">
     <div class="artist-edit-background">
       <div class="artist-edit-welcome">
         <h3>Welcome </h3>
         <h5>Welcome to the one-stop place for tattoos</h5>
       </div>
     </div>
   </div>

   <div class="container-fluid">

     <div class="col-xs-12 text-center">

       <br>

       <%- if devise_mapping.omniauthable? %>
       <%- resource_class.omniauth_providers.each do |provider| %>
       <%= link_to omniauth_authorize_path(resource_name, provider), class: 'upload-pictures btn btn-primary'  do %>
       <i class="fa fa-instagram"></i> <%=  "#{OmniAuth::Utils.camelize(provider)} Sign Up" %>
       <% end %>
       <% end -%>
       <% end -%>

       <br>

       or

       <h4> Enter your info </h4>

     </div>
   </div>

   <div class="container-fluid">


     <div class="col-xs-12 text-center">

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>


      <div class="form-inputs group" >
        <input class="input-material" type="text", name="artist[name]", id="artist_name",  required="true", autofocus="true" >
        <span class="highlight"> </span>
        <span class="bar"> </span>
        <label class="label-material"> Name </label>
      </div>

      <div class="form-inputs group" >
      <input class="input-material", type="email", name="artist[email]", id="artist_email",  required="true", autofocus="true" >
        <span class="highlight"> </span>
        <span class="bar"> </span>
        <label class="label-material"> Your email </label>
      </div>

      <div class="form-inputs group" >
        <input class="input-material" type="text", name="artist[address]", id="artist_address", required="true", autofocus="true" >
        <span class="highlight"> </span>
        <span class="bar"> </span>
        <label class="label-material"> Your Address </label>
      </div>

      <div class="form-inputs group" >
        <input class="input-material" type="text", name="artist[city]", id="artist_city",  required="true", autofocus="true" >
        <span class="highlight"> </span>
        <span class="bar"> </span>
        <label class="label-material"> Your City </label>
      </div>

      <div class="form-inputs group" >

        <textarea class="textarea-material", name="info", name="artist[info]", id="artist_info", required="true", autofocus="true" > </textarea>
        <label class="label-material"> A short intro about yourself </label>
        <span class="bar"> </span>
      </div>

      <div class="form-inputs group" >
        <input class="input-material" type="password", name="artist[password]", id="artist_password"  required="true", autofocus="true" >
        <span class="bar"> </span>
        <label class="label-material"> Your password - 6 characters min </label>
      </div>

      <div class="form-inputs group" >
        <input class="input-material" type="password", name="artist[password_confirmation]", id="password_confirmation" required="true", autofocus="true" >
        <span class="bar"> </span>
        <label class="label-material"> Confirm your password </label>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign up", class: 'upload-pictures btn btn-primary'%>
      </div>

    </div>




  </div>
  <% end %>


