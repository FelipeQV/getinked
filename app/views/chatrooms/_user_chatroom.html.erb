You're chatting with <%= @chatroom.appointment.artist.email %>
<br>
<div id="messages" data-user="user">
<% @chatroom.messages.each do |message| %>
<% if message.from == 'user' %>
<p><strong>You: </strong> <%= message.content %></p>
<% elsif message.from == 'artist' %>
<p><strong><%= message.artist.email %>: </strong> <%= message.content %></p>
<% end %>
<% end %>
</div>

<%= form_for @message, remote: true, authenticity_token: true do |f| %>
  <%= f.label :your_message %>:
  <%= f.text_area :content, class: "form-control", data: {textarea: "message"} %>

  <%= f.hidden_field :chatroom_id, value: @chatroom.id %>
  <%= f.hidden_field :from, value: 'user' %>
  <%= f.submit "send", class: "btn btn-primary", data: {send: "message"} %>
<% end %>
